{
  "ci": {
    "collect": {
      "staticDistDir": "./frontend/dist",
      "settings": {
        "preset": "desktop",
        "chromeFlags": "--no-sandbox --disable-setuid-sandbox --disable-dev-shm-usage --disable-gpu --headless=new --disable-storage-reset",
        "onlyCategories": ["performance", "accessibility", "best-practices", "seo"],
        "skipAudits": ["uses-http2", "uses-long-cache-ttl", "datadog-trace-id", "redirects-http"]
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["warn", { "minScore": 0.9 }],
        "categories:best-practices": ["warn", { "minScore": 0.9 }],
        "categories:seo": ["warn", { "minScore": 0.9 }],
        "max-potential-fid": ["warn", { "minScore": 0.9 }],
        "csp-xss": ["warn", { "minScore": 0.9 }],
        "unused-javascript": ["warn", { "minScore": 0.9 }],
        "render-blocking-resources": ["warn", { "maxLength": 0 }],
        "offscreen-images": "warn",
        "uses-webp-images": "off",
        "color-contrast": "off",
        "tap-targets": "off",
        "maskable-icon": "off",
        "errors-in-console": "off",
        "installable-manifest": "off",
        "deprecations": "warn",
        "resource-summary": "warn",
        "splash-screen": "off",
        "service-worker": "off",
        "pwa-crossorigin": "off",
        "valid-source-maps": "warn",
        "themed-omnibox": "off"
      }
    }
  }
}
