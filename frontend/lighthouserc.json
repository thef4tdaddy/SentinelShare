{
  "ci": {
    "collect": {
      "staticDistDir": "./frontend/dist",
      "puppeteerLaunchOptions": {
        "args": ["--no-sandbox", "--disable-setuid-sandbox"]
      },
      "url": [
        "/"
      ]
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "offscreen-images": "off",
        "uses-webp-images": "off",
        "color-contrast": "off",
        "tap-targets": "off"
      }
    }
  }
}
